package day4;

// Renamed to PrivateStudent to avoid conflict
class PrivateStudent {
    private String name;
    private int id;
    private String department;

    // Constructor to initialize private data
    PrivateStudent(String name, int id, String department) {
        this.name = name;
        this.id = id;
        this.department = department;
    }

    // Public method to access private data
    public void displayDetails() {
        System.out.println("Student Name: " + name);
        System.out.println("Student ID: " + id);
        System.out.println("Department: " + department);
    }
}

public class PrivateAcessSpecifier {

    public static void main(String[] args) {
        // Creating a PrivateStudent object
        PrivateStudent s1 = new PrivateStudent("Alice", 101, "CSE");

        // Accessing private data via public method
        s1.displayDetails();

        
    }
}
