package day4;

// Class with private data members
class Student {
    private String name;
    private int id;
    private String department;

    // Constructor to initialize private data
    Student(String name, int id, String department) {
        this.name = name;
        this.id = id;
        this.department = department;
    }

    // Public method to access private data
    public void displayDetails() {
        System.out.println("Student Name: " + name);
        System.out.println("Student ID: " + id);
        System.out.println("Department: " + department);
    }
}

public class PrivateAcessSpecifier {

    public static void main(String[] args) {
        // Creating a Student object
        Student s1 = new Student("Alice", 101, "CSE");

        // Accessing private data via public method
        s1.displayDetails();

        // ‚ùå Direct access to private variables is NOT allowed
        // System.out.println(s1.name); // ERROR
    }
}
